<div class="row search-result">
  <% @athletes.each do |athlete| %>
      <div class="col-md-10 col-md-offset-2 well member">
        <%= athlete.full_name %>
        <% if current_user %>
          <%= link_to "Follow", friendships_path(friend_id: athlete.id),
            method: :post, class: "btn btn-primary pull-right" unless current_user.follows_or_same?(athlete) %>
        <% end %>
        <%#= link_to "Name", root_path, class: "btn btn-primary pull-right" %>
      </div>
  <% end %>
</div>
<%= will_paginate @athletes, renderer: BootstrapPagination::Rails %>
