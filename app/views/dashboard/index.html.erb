<div class="jumbotron">
  <h1>Workout Lounge!</h1>
  <p>show off your workout to your friends and family</p>
  <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p>
</div>

<div class="row">
  <div class="col-md-10">
    <h2>List of Members</h2>
    <%= will_paginate @athletes, renderer: BootstrapPagination::Rails, class: "pull-left paginate" %>
  </div>
</div>

<div class="row">
  <% @athletes.each do |athlete| %>
      <div class="col-md-10 well member">
        <%= athlete.full_name %>
        <% if current_user %>
          <%= link_to "Follow", friendships_path(friend_id: athlete.id),
            method: :post, class: "btn btn-primary pull-right" unless current_user.follows_or_same?(athlete) %>
        <% end %>
        <%#= link_to "Name", root_path, class: "btn btn-primary pull-right" %>
      </div>
  <% end %>
</div>

</div>
